# ===== NODE ENVIRONMENT =====
NODE_ENV=development
LOG_LEVEL=debug

# ===== DATABASE (PostgreSQL) =====
DB_HOST=localhost
DB_PORT=5432
DB_NAME=saas_platform
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# ===== AUTH SERVICE =====
AUTH_SERVICE_PORT=3001

# ===== JWT =====
JWT_SECRET=your-super-secret-key-change-in-prod-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ===== PASSPORT OAUTH - GOOGLE =====
PASSPORT_GOOGLE_CLIENT_ID=your-google-client-id. apps.googleusercontent.com
PASSPORT_GOOGLE_CLIENT_SECRET=your-google-client-secret
PASSPORT_GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# ===== PASSPORT OAUTH - GITHUB =====
PASSPORT_GITHUB_CLIENT_ID=your-github-client-id
PASSPORT_GITHUB_CLIENT_SECRET=your-github-client-secret
PASSPORT_GITHUB_CALLBACK_URL=http://localhost:3001/auth/github/callback

# ===== SESSION =====
SESSION_SECRET=session-secret-key-change-in-prod

# ===== URLS =====
CLIENT_URL=http://localhost:5173
API_GATEWAY_URL=http://localhost:3002