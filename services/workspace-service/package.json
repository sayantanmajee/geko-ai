{
  "name": "@service/workspace-service",
  "version": "0.0.1",
  "description": "Workspace and team management service",
  "type": "module",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx --env-file ../../.env watch src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc --noEmit && tsc -p tsconfig.build.json",
    "clean": "rm -rf dist node_modules",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "db:migrate": "node scripts/migrate.js"
  },
  "dependencies": {
    "@package/shared-types": "workspace:*",
    "@package/shared-utils": "workspace:*",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.7.0",
    "typescript": "^5.2.2"
  }
}
