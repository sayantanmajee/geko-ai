{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": ["NODE_ENV", "LOG_LEVEL"],
  "globalDependencies": ["**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "db:migrate": {
      "cache": false,
      "persistent":  false
    },
    "clean": {
      "cache": false,
      "persistent": false
    }
  }
}