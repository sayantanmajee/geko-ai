{
  "name": "geko-ai",
  "version": "0.0.1",
  "private": true,
  "description": "Unified AI Platform with Local + Cloud Models, Team Collaboration, and Freemium Billing",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "turbo run test -- --coverage",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules && pnpm store prune",
    "docker:build": "docker-compose -f infra/docker-compose.yml build",
    "docker:up": "docker-compose -f infra/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infra/docker-compose.yml down",
    "docker:logs": "docker-compose -f infra/docker-compose.yml logs -f",
    "db:migrate": "turbo run db:migrate"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "turbo": "^2.7.0",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.26.1",
  "engines": {
    "node": ">=24.12.0",
    "pnpm": ">=10.0.0"
  },
  "dependencies": {
    "dotenv": "^16.6.1"
  }
}