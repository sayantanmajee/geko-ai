# ============================================================================
# ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in your values
# ============================================================================

# ===== NODE ENVIRONMENT =====
NODE_ENV=development
LOG_LEVEL=debug

# ===== DATABASE (PostgreSQL) =====
DB_HOST=localhost
DB_PORT=5432
DB_NAME=saas_platform
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_POOL_SIZE=10

# ===== AUTH SERVICE =====
AUTH_SERVICE_PORT=3001
AUTH_SERVICE_URL=http://localhost:3001

JWT_SECRET=your-super-secret-key-change-in-prod-128-chars-min
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Passport - Local Auth
LOCAL_AUTH_ENABLED=true

# Passport - Google OAuth
PASSPORT_GOOGLE_ENABLED=false
PASSPORT_GOOGLE_CLIENT_ID=your-google-client-id. apps.googleusercontent.com
PASSPORT_GOOGLE_CLIENT_SECRET=your-google-client-secret
PASSPORT_GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# Session
SESSION_SECRET=session-secret-key-change-in-prod

# ===== AI GATEWAY =====
AI_GATEWAY_PORT=3002
AI_GATEWAY_URL=http://localhost:3002

# ===== MEMORY SERVICE =====
MEMORY_SERVICE_PORT=3003
MEMORY_SERVICE_URL=http://localhost:3003

# ===== LIBRECHAT RUNTIME =====
LIBRECHAT_RUNTIME_PORT=3004
LIBRECHAT_RUNTIME_URL=http://localhost:3004
OPENAI_API_KEY=your-openai-api-key

# ===== QUOTA SERVICE =====
QUOTA_SERVICE_PORT=3005
QUOTA_SERVICE_URL=http://localhost:3005

# ===== REDIS (for quotas, sessions) =====
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ===== OBSERVABILITY =====
SENTRY_ENABLED=false
SENTRY_DSN=

# ===== CORS =====
CORS_ORIGIN=http://localhost:3000,http://localhost:5173